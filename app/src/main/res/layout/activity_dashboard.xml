<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".DashboardActivity">

    <!-- Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_card_frosted"
        android:elevation="6dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="18dp"
        android:clipToOutline="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRoleInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role: Student | School: SH101"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/bg_card_blur"
            android:padding="8dp"
            android:src="@drawable/ic_logout"
            android:tint="@android:color/white"
            android:contentDescription="Logout"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Dashboard"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginBottom="12dp" />

    <!-- Dashboard Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDashboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        tools:listitem="@layout/item_dashboard_card" />

</LinearLayout>
